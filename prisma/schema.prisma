generator client {
  provider = "prisma-client-js"
}

generator nestgraphql {
  provider   = "node node_modules/prisma-nestjs-graphql"
  output     = "../src/lib/graphql/prisma-client"
  reExport   = None
  emitSingle = true
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String  @id @default(uuid())
  email    String  @unique
  password String?
  name     String

  role Role

  investments       Investment[]
  authUserProviders AuthUserProvider[]

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
}

model AuthUserProvider {
  id String @id @default(uuid())

  providerName AuthProviderName
  providerId   String

  user   User   @relation(fields: [userId], references: [id])
  userId String

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())

  @@unique([providerName, providerId, userId])
}

model Investment {
  id              String    @id @default(uuid())
  amount          Float
  correctedAmount Float?
  taxedAmount     Float?
  startDate       DateTime
  duration        Int?
  finishedAt      DateTime?
  lastCorrectedAt DateTime?

  regimeName       Regime
  regimePercentage Float? @default(100)

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId String

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
}

enum AuthProviderName {
  GOOGLE
}

enum Role {
  ADMIN
  USER
}

enum Regime {
  CDI
  POUPANCA
}
